<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hs_sb_reading"
    app:cardBackgroundColor="@color/transparent_background"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="表号："
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:textColor="@color/colorObjectText"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/tv_hs_reading_bh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:textColor="@color/colorObjectText"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期："
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:textColor="@color/colorObjectText"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/tv_hs_reading_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:textColor="@color/colorObjectText"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用水量(m³)："
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:textColor="@color/colorObjectText"
                    android:textSize="@dimen/hca_reading_itemsize" />
                <TextView
                    android:id="@+id/tv_hs_reading_ysl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:textColor="@color/colorObjectText"
                    android:textSize="@dimen/hca_reading_itemsize" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>